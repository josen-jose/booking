    />
<style>
  .adminnav {
  margin: auto;
  width: 60%;
  padding: 5px;
}
.center {
  margin: auto;
  width: 60%;
  border: 3px solid #73AD21;
  padding: 10px;
}
.hcenter {
  text-align: center;
  padding: 2px;
}
.sb {
  margin: auto;
  width: 60%;
  text-align: center; 
  padding: 50px;
}

</style>
</head>
<body>
  <div class = "adminnav">
  <span hidden id="incom"><%=db%></span>
  <span hidden><%=db=JSON.parse(db)%></span>
   
    
 <div class = "center">
 <h1 class="hcenter">USER DASHBOARD
  <br>
    <a class="btn btn-outline-success btn-sm" href="/admin">Bookings</a>

    <a class="btn btn-success btn-sm" href="#">User</a>
    <a class="btn  btn-outline-success btn-sm" href="/setting">Settings</a>
  
    <a class="btn btn-outline-secondary  btn-sm " href="/logout">Logout</a>
 </h1>
</div>
<br>






<div class = 'center'>





  

<table id ='table' class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">User</th>
      <th scope="col">Car Number</th>
      <th></th>
    </tr>
  </thead>
  <tbody id = "tableBody">
    
      <%for (i=0; i<db.length; i++){ %>
    <tr>
      
      <th scope="row" id=""><%=++i%></th>
      <span hidden><%=--i%></span>
      <td id = "user<%=i%>">Mark</td>
      <td id = "car<%=i%>">Otto</td>
      <td> <button id = "id<%=i%>" class = "cancel btn btn-light btn-sm">❌</button></td>
   
    </tr>
 <%}%>
 <tr>
  <th scope="row" ></th>
      <td class = " muted user-new" contenteditable="true"></td>
      <td class = "muted car-new"contenteditable="true"></td>
      <td> <button class = "new btn btn-light btn-sm">✖️</button></td>

 </tr>

   </tbody>
</table>







  </div>
    <form action = "/user-update" method ="post">
<input type="hidden" id="del_list" name="del_list" value="nochange"> </input>
<input type="hidden" id="up_list" name="up_list" value="nochange"> </input>
<div class= 'sb'>
  <button type ="submit" id = "submit"  class="book-button btn btn-success">Update</button>
  </form>

  </div>
    <script src= "/js/user.js" charset="utf-8" type='text/javascript' ></script>
